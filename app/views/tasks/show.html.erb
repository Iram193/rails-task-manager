<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
	<% if @task.completed %>
		<p> <i class="far fa-check-square"></i> Task is complete!</p>
	<% else %>
		<p> <i class="fal fa-check-square"></i> Task is incomplete!</p>
	<% end %>
<%=  link_to 'back', tasks_path %>
<%= link_to 'edit', edit_task_path(@task) %>
<%= link_to 'delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>